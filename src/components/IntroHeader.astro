---
import { SITE } from 'src/config';

const { intro } = Astro.props;
---

<script
  src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"
  integrity="sha512-aVKKRRi/Q/YV+4mjoKBsE4x3H+BkegoM/em46NNlCqNTmUYADjBbeNefNxYV7giUp0VxICtqdrbqU7iVaeZNXA=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer"
></script>
<script>
  import '../scripts/jquery.scrollex';
  import '../scripts/jquery.scrolly';
  import '../scripts/utils';
  import '../scripts/main';
</script>

{
  intro && (
    <>
      <div id="intro">
        <h1>
          This is
          <br />
          Massively
        </h1>
        <p>
          A free, fully responsive HTML5 + CSS3 site template designed by <a href="https://twitter.com/ajlkn">@ajlkn</a>{' '}
          for <a href="https://html5up.net">HTML5 UP</a>
          <br />
          and released for free under the <a href="https://html5up.net/license">Creative Commons license</a>. <br />{' '}
          Remixed for <a href="https://astro.build">Astro</a> by{' '}
          <a href="https://twitter.com/d_bozhinovski">@d_bozhinovski</a>
        </p>
        <ul class="actions">
          <li>
            <a href="#header" class="button icon solid solo fa-arrow-down scrolly">
              Continue
            </a>
          </li>
        </ul>
      </div>
    </>
  )
}

<!-- Header -->
<header id="header">
  <a href="/" class="logo">{SITE.title}</a>
</header>
